@model Templo_de_Momo.Models.Noticia

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Noticia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cuerpo" class="control-label"></label>
                <input asp-for="Cuerpo" class="form-control" />
                <span asp-validation-for="Cuerpo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Juego</label>
                <select class="form-control" name="JuegoId">
                    @foreach (var item in (IList<Juego>)ViewBag.Juegos)
                    {
                        <option value="@item.Id">@(item.Titulo)</option>
                    }
                </select>
                <span asp-validation-for="JuegoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Creador</label>
                <select class="form-control" name="CreadorId">
                    @foreach (var item in (IList<Creador>)ViewBag.Creadores)
                    {
                        <option value="@item.Id">@(item.NickName)</option>
                    }
                </select>
                <span asp-validation-for="CreadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

