@model IEnumerable<Templo_de_Momo.Models.Juego>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requisitos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreadorId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                <img width="50" src="@item.Portada" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requisitos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @(item.Creador.NickName + " ") 
            </td>
            <td>
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group btn-group-sm" role="group" aria-label="First group">
				        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="far fa-edit"></i> Editar
                        </a>
                    </div>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Second group">
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" title="Detalles">
                            <i class="fas fa-info-circle"></i> Detalles
                        </a>
                    </div>
                    <div class="btn-group btn-group-sm" role="group" aria-label="Third group">
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Borrar">
                            <i class="far fa-trash-alt"></i> Borrar
                        </a>
                    </div>
                </div>
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Index" asp-controller="Noticias" asp-route-id="@item.Id" title="Noticias">
                    <i class="fas fa-file-contract"></i> Noticias
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
