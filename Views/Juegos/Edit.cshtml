@model Templo_de_Momo.Models.Juego

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Juego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
				<input type="hidden" class="form-control" name="Id" value="@Model.Id"/>
			</div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Portada" class="control-label"></label><br/>
                @if (Model.Portada != ""){
					<img src="@Model.Portada" />
				}else{
					<p>Sin Portada</p>
				}
            </div>
            <div class="form-group">
                <label asp-for="PortadaFile" class="control-label"></label>
                <input type="file" name="PortadaFile" accept="image/*"/>
                <span asp-validation-for="PortadaFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea name="Descripcion" cols="35"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requisitos" class="control-label"></label>
                <input asp-for="Requisitos" class="form-control" />
                <span asp-validation-for="Requisitos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Creador</label>
                <select class="form-control" name="CreadorId">
                    @foreach (var item in (IList<Creador>)ViewBag.Creadores)
                    {
                        <option value="@item.Id">@(item.NickName)</option>
                    }
                </select>
                <span asp-validation-for="CreadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

