@model Templo_de_Momo.Models.Comentario

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
				<input type="hidden" class="form-control" name="Id" value="@Model.Id"/>
			</div>
            <div class="form-group">
                <label asp-for="Cuerpo" class="control-label"></label>
                <input asp-for="Cuerpo" class="form-control" />
                <span asp-validation-for="Cuerpo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" name="UsuarioId">
                    @foreach (var item in (IList<Usuario>)ViewBag.Usuarios)
                    {
                        @:<option @(item.Id==Model.UsuarioId ? "selected" : "") value="@item.Id">@(item.NickName)</option>
                    }
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" name="JuegoId">
                    @foreach (var item in (IList<Noticia>)ViewBag.Noticias)
                    {
                        @:<option @(item.Id==Model.NoticiaId ? "selected" : "") value="@item.Id">@(item.Titulo)</option>
                    }
                </select>
                <span asp-validation-for="NoticiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

