@model Templo_de_Momo.Models.Comentario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cuerpo" class="control-label"></label>
                <input asp-for="Cuerpo" class="form-control" />
                <span asp-validation-for="Cuerpo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <select class="form-control" name="UsuarioId">
                    @foreach (var item in (IList<Usuario>)ViewBag.Usuarios)
                    {
                        <option value="@item.Id">@(item.NickName)</option>
                    }
                </select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Noticia</label>
                <select class="form-control" name="NoticiaId">
                    @foreach (var item in (IList<Noticia>)ViewBag.Noticias)
                    {
                        <option value="@item.Id">@(item.Juego.Titulo+" - "+ item.Titulo)</option>
                    }
                </select>
                <span asp-validation-for="NoticiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

